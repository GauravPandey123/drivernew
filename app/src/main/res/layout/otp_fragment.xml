<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewVerifyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_30sp"
        android:layout_marginTop="@dimen/_200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/verifyyour"/>

      <TextView
          android:id="@+id/textViewVerifyAccoutnText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/please_ente"
          android:gravity="center"
          android:layout_marginTop="@dimen/_20dp"
          android:textSize="@dimen/font_20sp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textViewVerifyAccount"/>






</androidx.constraintlayout.widget.ConstraintLayout>